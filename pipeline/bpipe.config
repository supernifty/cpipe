// Include ngs utils to make them available to pipeline
libs="../tools/groovy-ngs-utils/1.0/groovy-ngs-utils.jar"

// To lower contention on the variant database,
// restrict the concurrency on updating it down to 1
limits {
    variantdb = 1
}

